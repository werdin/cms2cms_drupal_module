<?php
/**
 * Implements hook_help.
 *
 * Displays help and module information.
 *
 * @param path
 *   Which path of the site we're using to display help
 * @param arg
 *   Array that holds the current path as returned from arg() function
 */
function cms2cms_help($path, $arg)
{
    switch ($path) {
        case "admin/help#cms2cms":
            return '<p>' . t("Automated cms migration") . '</p>';
            break;
    }
}

/**
 * Implements hook_menu().
 */
function cms2cms_menu()
{
    $items = array();

    $items['admin/cms2cms'] = array(
        'title' => 'CMS2CMS',
        'description' => 'A cms2cms menu',
        'page callback' => 'cms2cms_content',
        'type' => MENU_NORMAL_ITEM,
        'weight' => 11,
        'access arguments' => array('administer access control'),
    );

    return $items;
}


/**
 * Implements hook_content().
 */
function cms2cms_content()
{
    return '<h2>PAGE CONTENT</h2>';
}


/**
 * Implements hook_permission().
 */

function cms2cms_permission(){
    return array(
        'administer access control' => array(
            'title' => t('Access administer control'),
            'description' => t('Access administer access control'),
        ),
    );
}


